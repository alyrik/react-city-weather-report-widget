{
  "compilerOptions": {
    "target": "es5",
    "lib": ["dom", "esnext"],
    "declaration": true,
    "skipLibCheck": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "noEmit": true,
    "esModuleInterop": true,
    "module": "esnext",
    "moduleResolution": "node",
    "resolveJsonModule": true,
    "jsx": "react-jsx",
    "baseUrl": "."
  },
  "types": ["node", "jest", "@testing-library/jest-dom"],
  "include": ["**/*.ts", "**/*.tsx"],
  "exclude": ["node_modules"]
}
